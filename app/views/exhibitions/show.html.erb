<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
  <h1><%= @exhibition.name %> <small>(<%= @exhibition.date %>)</small></h1>
  <%= link_to edit_exhibition_path(@exhibition.id), class: 'btn btn-light btn-sm border' do %>
      <i class="fa fa-pencil"></i> Edit this exhbiiton
    <% end %>
  </div>


  <ul>
    <li>Date <%= @exhibition.date %></li>
    <li>Rating <%= @exhibition.rating %></li>
  </ul>

<%= link_to exhibitions_path do %>
    <i class="fa-solid fa-plus"></i> Back to list
  <% end %>
