<%= form_with model: @exhibition do |f| %>
  <div class="form-group">
    <%= f.label :name%>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

 </div class="form-group">
    <%= f.label :date%>
    <%= f.text_field :date, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_area :details, class: 'form-control' %>
  </div>


  <%= f.submit class: 'btn btn-primary mt-3' %>
<% end %>
